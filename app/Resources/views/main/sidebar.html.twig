                    <li class="header">{{ 'menu.application'|trans }}</li>
                    {{ knp_menu_render('AppBundle:SettingBuilder:build') }}
                {% endif %}
            </ul>
            <div class="slimScrollBar" style="background: rgba(0, 0, 0, 0.498039); width: 4px; position: absolute; top: 0px; opacity: 0.4; display: none; border-radius: 0px; z-index: 99; right: 1px; height: 189.038px;"></div>
            <div class="slimScrollRail" style="width: 4px; height: 100%; position: absolute; top: 0px; display: none; border-radius: 0px; background: rgb(51, 51, 51); opacity: 0.2; z-index: 90; right: 1px;"></div>
        </div>
    </div>
    <!-- #Menu -->
    <!-- Footer -->
