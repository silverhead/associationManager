{% if menuSelect is not defined %}
    {% set menuSelect = 'dashboard'  %}
{% endif %}

<!-- Left Sidebar -->
<aside id="leftsidebar" class="sidebar">
    <!-- User Info -->
    {% include ':main:userInfosBlock.html.twig' %}
    <!-- #User Info -->
    <!-- Menu -->
    <div class="menu">
        <div class="slimScrollDiv" style="position: relative; overflow: hidden; width: auto; height: 463px;">
            <ul class="list" style="height: 463px; overflow: hidden; width: auto;">
                <li class="header">Menu</li>
                {{ knp_menu_render('AppBundle:MainBuilder:build') }}
