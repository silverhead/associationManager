    <div class="row">
        <div class="col-xs-12">
            <div class="body table-responsive">
                <form action="#">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>{{ 'app.subscription.subscription.list.table.label'|trans }}</th>
                            <th>{{ 'app.subscription.subscription.list.table.membersNumber'|trans }}</th>
                            <th>{{ 'app.subscription.subscription.list.table.cost'|trans }}</th>
                            <th>{{ 'app.subscription.subscription.list.table.duration'|trans }}</th>
                            <th>{{ 'app.subscription.subscription.list.table.status'|trans }}</th>
                            <th>{{ 'app.common.table.action'|trans }}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for subscription in results %}
                            <tr>
                                <th scope="row">{{ subscription.getId() }}</th>
                                <td>{{ subscription.getLabel() }}</td>
                                <td class="text-center">{{ subscription|countSubscriberMembers }}</td>
                                <td class="text-right">{{ subscription.getCost()|number_format(2,',',' ') }} â‚¬</td>
                                <td class="text-right">{{ subscription.getDuration() }}</td>
                                <td>{{ subscription.isActive()? '<i class="material-icons text-success">done</i>':'<i class="material-icons text-danger">clear</i>' }}</td>
                                <td>
                                    {#<a href="#" class="btn btn-primary material-icons">remove_red_eye</a>#}
                                    <a href="{{ path('subscription_subscription_edit', {'id': subscription.getId()}) }}" class="btn btn-warning material-icons">edit</a>
                                    {% if subscription.canDeleted() %}
                                        <a href="#" data-id="{{ subscription.getId() }}" class="btn btn-danger material-icons delSubscription">delete</a>
                                    {% else %}
                                        <a href="#" data-id="#" class="btn btn-danger material-icons disabled">delete</a>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </form>
                <div class="pull-right">
                    {{ knp_pagination_render(results) }}
                </div>
            </div>
        </div>
    </div>
</div>