<div class="row">
    <div class="col-xs-12">
        <div class="body table-responsive">
            <form action="#">
                <table class="table table-striped" id="tableFee">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th data-order-sortname="subscription" data-order-sort="{{ order.subscription }}" class="sortable">{{ 'member.subscriptionFee.list.header.subscription'|trans }}</th>
                        <th data-order-sortname="fullName" data-order-sort="{{ order.fullName }}" class="sortable">{{ 'member.subscriptionFee.list.header.member'|trans }}</th>
                        <th data-order-sortname="period" data-order-sort="{{ order.period }}" class="sortable">{{ 'member.subscriptionFee.list.header.period'|trans }}</th>
                        <th>{{ 'member.subscriptionFee.list.header.cost'|trans }}</th>
                        <th>{{ 'member.subscriptionFee.list.header.paymentDate'|trans }}</th>
                        <th>{{ 'member.subscriptionFee.list.header.paid'|trans }}</th>
                        {% if is_granted('MEMBER_SUBSCRIPTION_FEE_SAVE') %}
                            <th>{{ 'app.common.table.action'|trans }}</th>
                        {% endif %}
                    </tr>
                    </thead>
                    <tbody>
                    {% for fee in fees %}
                        <tr data-row-fee="{{ fee.getId() }}">
                            <td>{{ fee.getId() }}</td>
                            <td>{{ fee.getSubscription().getSubscription().getLabel() }}</td>
                            <td>{{ fee.getSubscription().getMember().getFullName() }}</td>
                            <td>{{ fee.getStartDate()|date('d/m/Y') }} {{ 'app.common.to'|trans }} {{ fee.getEndDate()|date('d/m/Y') }}</td>
                            <td>{{ fee.getCost()|number_format(2, ",", " ") }} â‚¬</td>
                            <td>{% if fee.getPaymentDate() is not null %} {{ fee.getPaymentDate()|date('d/m/Y') }} {% endif %}</td>
                            <td>
                                {% include ':common:boolean.html.twig' with {'status': fee.getPaid()} %}
                            </td>
                            <td>
                                {% if is_granted('MEMBER_SUBSCRIPTION_FEE_SAVE') %}
                                    <a href="#" data-subscription-label="{{ fee.getSubscription().getSubscription().getLabel() }}" data-id="{{ fee.getId() }}" class="editFee btn btn-warning material-icons">euro_symbol</a>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </form>
            <div class="pull-right">
                {{ knp_pagination_render(fees) }}
                {#{% include 'main/pagination.html.twig' %}#}
            </div>
        </div>
        {% if is_granted('MEMBER_SUBSCRIPTION_FEE_SAVE') %}
            <div class="modal fade" id="editSubscriptionFeeModal" tabindex="-1" role="dialog" style="display: none;">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title text-center" id="editSubscriptionFeeLabel">{{ 'member.subscriptionFee.edit.title'|trans }}</h4>
                        </div>
                        <div class="modal-body">
                        </div>
                        <div class="modal-footer">
                            <button type="submit" id="saveFeeBtn" class="btn btn-link waves-effect">{{ 'app.common.form.submit.save'|trans }}</button>
                            <button type="button" class="btn btn-link waves-effect" data-dismiss="modal">{{ 'app.common.cancelBtn'|trans }}</button>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
</div>