{% extends 'layoutLogin.html.twig' %}

{% block javascript %}
    {{ parent() }}
    <script src="{{ asset('plugins/fileinput/fileinput.min.js') }}"></script>
    <script src="{{ asset('plugins/fileinput/locales/fr.js') }}"></script>
    <script src="{{ asset('plugins/jquery-inputmask/jquery.inputmask.bundle.js') }}"></script>
    <script src="{{ asset('bundles/app/setting/js/manage.js') }}"></script>
{% endblock %}

{% block content %}
    <div class="row block-header">
        {% include 'main/breadcrumb.html.twig' with {'breadcrumbs': [
        {
        'href': path('dashboard'),
        'title': 'app.dashboard.callback'|trans,
        'label': 'app.dashboard.title'|trans
        },
        {
        'label': 'app.setting.title'|trans
        }
        ] } %}
        <h2 class="col-xs-12">
            {{ 'app.setting.title'|trans }}
        </h2>
    </div>
    {% include ':main/flashMessage:flashMessageBlock.html.twig' %}
    <div class="row">
        <div class="col-xs-12">
            <div class="card">
                <div class="body">
                    {{ form_start(formSetting) }}
                        {{ form_errors(formSetting) }}
                        <div class="row">
                            <div class="col-md-4">
                                <div class="kv-logo center-block">
                                    {{ form_widget(formSetting.logo, {'attr': {'class': 'file-loading'}}) }}
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group {% if not formSetting.associationName.vars.valid %}text-danger{% endif %}">
                                    {{ form_label(formSetting.associationName, 'app.setting.form.label.associationName'|trans) }}
                                    {{ form_widget(formSetting.associationName, {'attr': {
                                        'class': 'form-control', 'placeholder': 'app.setting.form.placeholder.associationName'|trans}}
                                    ) }}
                                    {{ form_errors(formSetting.associationName) }}
                                </div>
                                <div class="form-group {% if not formSetting.contactEmail.vars.valid %}text-danger{% endif %}">
                                    {{ form_label(formSetting.contactEmail, 'app.setting.form.label.contactEmail'|trans) }}
                                    {{ form_widget(formSetting.contactEmail, {'attr': {
                                        'class': 'form-control', 'placeholder': 'app.setting.form.placeholder.contactEmail'|trans}}
                                    ) }}
                                    {{ form_errors(formSetting.contactEmail) }}
                                </div>
                                <div class="form-group {% if not formSetting.robotEmail.vars.valid %}text-danger{% endif %}">
                                    {{ form_label(formSetting.contactEmail, 'app.setting.form.label.robotEmail'|trans) }}
                                    {{ form_widget(formSetting.robotEmail, {'attr': {
                                        'class': 'form-control', 'placeholder': 'app.setting.form.label.robotEmail'|trans}}
                                    ) }}
                                    {{ form_errors(formSetting.robotEmail) }}
                                </div>
                                <div class="form-group {% if not formSetting.phone.vars.valid %}text-danger{% endif %}">
                                    {{ form_label(formSetting.phone, 'app.setting.form.label.phone'|trans) }}
                                    {{ form_widget(formSetting.phone, {'attr': {
                                        'class': 'form-control', 'placeholder': 'app.setting.form.label.phone'|trans}}
                                    ) }}
                                    {{ form_errors(formSetting.phone) }}
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group {% if not formSetting.country.vars.valid %}text-danger{% endif %}">
                                    {{ form_label(formSetting.country, 'app.setting.form.label.country'|trans) }}
                                    {{ form_widget(formSetting.country, {'attr': {
                                        'class': 'form-control selectpicker', 'title': 'app.setting.form.label.country'|trans}}
                                    ) }}
                                    {{ form_errors(formSetting.country) }}
                                </div>
                                <div class="form-group {% if not formSetting.city.vars.valid %}text-danger{% endif %}">
                                    {{ form_label(formSetting.city, 'app.setting.form.label.city'|trans) }}
                                    {{ form_widget(formSetting.city, {'attr': {
                                        'class': 'form-control', 'placeholder': 'app.setting.form.label.city'|trans}}
                                    ) }}
                                    {{ form_errors(formSetting.city) }}
                                </div>
                                <div class="form-group {% if not formSetting.zipcode.vars.valid %}text-danger{% endif %}">
                                    {{ form_label(formSetting.zipcode, 'app.setting.form.label.zipcode'|trans) }}
                                    {{ form_widget(formSetting.zipcode, {'attr': {
                                        'class': 'form-control', 'placeholder': 'app.setting.form.label.zipcode'|trans}}
                                    ) }}
                                    {{ form_errors(formSetting.zipcode) }}
                                </div>
                                <div class="form-group {% if not formSetting.address.vars.valid %}text-danger{% endif %}">
                                    {{ form_label(formSetting.address, 'app.setting.form.label.address'|trans) }}
                                    {{ form_widget(formSetting.address, {'attr': {
                                        'class': 'form-control', 'placeholder': 'app.setting.form.label.address'|trans}}
                                    ) }}
                                    {{ form_errors(formSetting.address) }}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12 form-group {% if not formSetting.description.vars.valid %}text-danger{% endif %}">
                                {{ form_label(formSetting.description, 'app.setting.form.label.description'|trans) }}
                                {{ form_widget(formSetting.description, {'attr': {
                                    'style': 'overflow: hidden; word-wrap: break-word; height: 32px;',
                                    'class': 'form-control no-resize auto-growth', 'placeholder': 'app.setting.form.label.description'|trans}}
                                ) }}
                                {{ form_errors(formSetting.description) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">{{ 'app.setting.social_network'|trans }}</div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(formSetting.urlFacebook, {
                                    'label' : 'app.setting.form.label.url_facebook'|trans,
                                    'attr': {
                                        'style': 'overflow: hidden; word-wrap: break-word; height: 32px;',
                                        'class': 'form-control no-resize auto-growth', 'placeholder': 'app.setting.form.label.url_facebook'|trans
                                        }
                                    }
                                ) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(formSetting.urlTwitter, {
                                    'label' : 'app.setting.form.label.url_twitter'|trans,
                                    'attr': {
                                        'style': 'overflow: hidden; word-wrap: break-word; height: 32px;',
                                        'class': 'form-control no-resize auto-growth', 'placeholder': 'app.setting.form.label.url_twitter'|trans
                                    }
                                }
                                ) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 text-center">
                                <input class="btn btn-success" name="save"  type="submit" value="{{ 'app.common.form.submit.save'|trans }}">
                            </div>
                        </div>
                    {{ form_end(formSetting) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}