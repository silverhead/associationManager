{% extends 'layoutLogin.html.twig' %}

{% block javascript %}
    {{ parent() }}
    <script src="{{ asset('plugins/fileinput/fileinput.min.js') }}"></script>
    <script src="{{ asset('plugins/fileinput/locales/fr.js') }}"></script>
    <script src="{{ asset('plugins/jquery-inputmask/jquery.inputmask.bundle.js') }}"></script>
    <script type="text/javascript">
        $(function(){
            $('.money-euro').inputmask('999,99 €', { placeholder: '___,__ €' });
            $('.day-duration').inputmask('999 J', { placeholder: '___ J' });

            autosize($('textarea.auto-growth'));
        });

        $("#logo").fileinput({
            overwriteInitial: true,
            maxFileSize: 1500,
            showZoom: false,
            showRemove: true,
            showClose: false,
            showCaption: false,
            browseOnZoneClick: true,
            browseLabel: '',
            removeLabel: '',
            browseIcon: '<i class="glyphicon glyphicon-folder-open"></i>',
            removeIcon: '<i class="glyphicon glyphicon-remove"></i>',
            removeTitle: 'Cancel or reset changes',
            elErrorContainer: '#kv-avatar-errors-2',
            msgErrorClass: 'alert alert-block alert-danger',
            defaultPreviewContent: '<img src="{{ asset('images/avatars/user.png') }}" alt="Your Avatar" style="width:50%" class="img-responsive"><h6 class="text-muted">Cliquer sur le logo pour le changer</h6>',
            layoutTemplates: {main2: '{preview} {remove} {browse}'},
            allowedFileExtensions: ["jpg", "png", "gif"]
        });
    </script>
{% endblock %}

{% block content %}
    <div class="row block-header">
        {% include 'main/breadcrumb.html.twig' with {'breadcrumbs': [
        {
        'href': path('dashboard'),
        'title': 'retour tableau de bord',
        'label': 'Tableau de bord'
        },
        {
        'label': "Paramétrage de l'application"
        }
        ] } %}
        <h2 class="col-xs-12">
            Paramétrage de l'application
        </h2>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="card">
                <div class="body">
                    {{ form_start(formSetting, {'attr': {'class': 'form-horizontal'}}) }}
                    {#<form action="" class="form-horizontal">#}
                        <div class="row">
                            <div class="col-md-4">
                                <div class="kv-logo center-block">
                                    {{ form_widget(formSetting.logo) }}
                                    {#<input id="logo" name="logo" type="file" class="file-loading">#}
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="">Nom de l'association</label>
                                    <div class="col-sm-10 form-line">
                                        {{ form_widget(formSetting.associationName, {'attr': {
                                            'class': 'form-control', 'placeholder': "Saisir le nom de votre association"}}
                                        ) }}
                                        {# <input type="text" class="form-control" id="" placeholder="Saisir le nom de votre association">#}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="">E-mail de contact</label>
                                    <div class="col-sm-10 form-line">
                                        <input type="text" class="form-control" id="" placeholder="L'e-mail sur laquelle vous souhaitez communiquer">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="">E-mail robot <br/><small>Pour les envois d'e-mail</small></label>
                                    <div class="col-sm-10 form-line">
                                        <input type="text" title="E-mail robot" class="form-control" id="" placeholder="E-mail robot">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="">Téléphone</label>
                                    <div class="col-sm-10 form-line">
                                        <input type="text" title="Téléphone" class="form-control" id="" placeholder="Téléphone">
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="">Pays</label>
                                    <div class="col-sm-12" style="padding: 0;">
                                        <select class="form-control selectpicker" id="" title="Pays">
                                            <option value="1">France</option>
                                            <option value="2">Belgique</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="">Ville</label>
                                    <div class="col-sm-10 form-line">
                                        <input type="text" title="Ville" class="form-control" id="" placeholder="Ville">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="">Code postal</label>
                                    <div class="col-sm-10 form-line">
                                        <input type="text" title="Code postal" class="form-control" id="" placeholder="Code postal">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="">Adresse</label>
                                    <div class="col-sm-10 form-line">
                                        <input type="text" title="Adresse" class="form-control" id="" placeholder="Adresse">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12 form-group">
                                <label for="">Description</label>
                                <div class="form-line">
                                    <textarea title="Description" class="form-control no-resize auto-growth" id="" placeholder="Description de votre association" style="overflow: hidden; word-wrap: break-word; height: 32px;"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 text-center">
                                <input class="btn btn-success" type="submit" value="Enregistrer et revenir sur la liste">
                                <input class="btn btn-success"  type="submit" value="Enregistrer et rester">
                            </div>
                        </div>
                    </form>
                    {{ form_end(formSetting) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}