{% extends 'layoutLogin.html.twig' %}

{% block content %}
    <div class="row block-header">
        <!-- {  include 'main/breadcrumb.html.twig' with {'breadcrumbs': breadcrumbs } } -->
        <h2 class="col-xs-12">
            <!-- <a href="{ callBackUrl }" class="btn bg-grey waves-effect">{ 'app.common.returnBtn'|trans }</a> -->&nbsp;
            {{ 'accounting.account.edit.title'|trans }}
        </h2>
    </div>
    {% include ':main/flashMessage:flashMessageBlock.html.twig' %}
    <div class="row">
        <div class="col-xs-12">
            <div class="card">
                <div class="body">
                    {{ form_start(formEntry) }}
                    <!--  form_row(formEntry.accountableAccountId) -->
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(formEntry.reference, {
                                'label': 'accounting.account.edit.form.reference'|trans
                            }) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(formEntry.accountingDate, {'label': 'accounting.account.edit.form.accounting_date'|trans}) }}
                        </div>
                    </div>                    
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(formEntry.valueDate, {
                                'label': 'accounting.account.edit.form.valueDate'|trans,
                                'attr': {
                                    'placeholder': 'accounting.account.edit.form.valueDate'|trans
                                }
                            }) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(formEntry.amount, {
                                'label': 'accounting.account.edit.form.amount'|trans,
                                'attr': {
                                    'placeholder': 'accounting.account.edit.form.amount'|trans
                                }
                            }) }}
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-12 text-center">
                            {% include 'form/bothSubmitBtnSaveLeaveAndStay.html.twig' with {} only %}
                        </div>
                    </div>

                    {{ form_end(formEntry) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}